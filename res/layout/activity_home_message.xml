<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  

    
	<RelativeLayout
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/message_style" 

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"  
    >
    
	    <ImageView 
	        android:id="@+id/home_iv_person"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/person"/>
	    
	    <TextView 
	        android:id="@+id/home_user_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:textStyle="bold"
	        android:textColor="@color/black"
	        android:layout_toRightOf="@id/home_iv_person"
	           />
	    
		<TextView 
	        android:id="@+id/home_colon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/home_user_name"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:textStyle="bold"
	        android:textColor="@color/black"
	        android:text=" :" />	
	            
	    <TextView 
	        android:id="@+id/home_message_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"   	        
	        android:layout_alignLeft="@id/home_user_name"
	        android:layout_below="@id/home_user_name"   />
	    
		<TextView 
		    android:id="@+id/home_message_count"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="14sp"
		    android:layout_below="@id/home_message_content"
		    android:layout_alignParentRight="true"
		    android:textColor="#CCCCCC"	/>
	    
   		<TextView 
   		    android:id="@+id/home_message_count_text"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:textSize="14sp"
   		    android:text="评论 "
   		    android:textColor="#CCCCCC"
   		    android:layout_toLeftOf="@id/home_message_count"
   		    android:layout_below="@id/home_message_content"	/>
	    	    
	    <TextView 
	        android:id="@+id/home_message_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="14sp"
	        android:layout_gravity="right"
	        android:layout_alignParentRight="true"
			android:textColor="#CCCCCC"
	        android:layout_below="@id/home_message_count"      />
	    
	</RelativeLayout>   
    
</LinearLayout>